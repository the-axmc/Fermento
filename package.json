{
  "name": "fermento-frontend",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"stellar scaffold watch --build-clients\" \"vite\"",
    "start": "concurrently \"stellar scaffold watch --build-clients\" \"vite\"",
    "build": "tsc -b && vite build",
    "install:contracts": "npm install --workspace=packages && npm run build --workspace=packages",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier . --write",
    "prepare": "husky install",
    "sync:client": "rsync -a --delete target/packages/non_fungible_contract/ packages/non_fungible_contract/"
  },
  "dependencies": {
    "@creit.tech/stellar-wallets-kit": "^1.7.5",
    "@stellar/design-system": "^3.1.1",
    "@stellar/stellar-sdk": "^14.0.0-rc.3",
    "@stellar/stellar-xdr-json": "^22.0.0-rc.1.1",
    "@tanstack/react-query": "^5.80.7",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "lossless-json": "^4.1.0",
    "mongodb": "^6.18.0",
    "non_fungible_contract": "file:packages/non_fungible_contract",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.30.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vercel/node": "^5.3.14",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-dom": "^1.48.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-react-x": "^1.51.0",
    "glob": "^10.4.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.1",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-wasm": "^3.4.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "**/*.{json,md,html,css,scss,yaml,yml}": "prettier --write"
  }
}
